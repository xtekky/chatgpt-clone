{
    "tabWidth": 2,
    "printWidth": 120,
    "proseWrap": "preserve",
    "semi": false,
    "trailingComma": "es5",
    "singleQuote": true,
    "arrowParens": "avoid",
    "overrides": [
      {
        "files": "{*.css,*.json,*.y?(a)ml,*.md,.prettierrc,.stylelintrc,.babelrc}",
        "options": {
          "tabWidth": 2
        }
      },
      {
        "files": "{**/.vscode/*.json,**/tsconfig.json,**/tsconfig.*.json}",
        "options": {
          "parser": "json5",
          "quoteProps": "preserve",
          "singleQuote": false,
          "trailingComma": "all"
        }
      }
    ]
  }